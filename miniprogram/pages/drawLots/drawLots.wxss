.container {
  height: 100%;
  margin: 0;
  background-color: rgb(245, 220, 218);
}

.page-body {
  position: absolute;
  left: 21px;
  top: 5px;
  right: 21px;
  bottom: 70px;  
}

.flex-list {
  float:left;
  height:33.3%;
  width:33.3%;
  position:relative;
}

.list-list:before{
  content:'';
  position:absolute;
  left:10px;
  right:10px;
  top:10px;
  bottom:10px;
  border-radius:10px;
  background-color:#cad5eb;
}
.list-list:after{
  content:attr(data-index);
  position:absolute;
  height:30px;
  left:0;
  right:0;
  top:0;
  bottom:0;
  margin:auto;
  text-align:center;
  font:24px/30px bold 'microsoft yahei';
}

.next {
  position: absolute;
  top: 90%;
  left: 0;
  right: 0;
  z-index: 100;
  color: transparent;
  border: none;
  background: url(http://qx.tkmao.com/wenchuang/drawlots/button2.png) no-repeat;
  background-size: 100px 30px;
  background-position: center;
}

