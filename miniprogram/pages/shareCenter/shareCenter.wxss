.show-draw {
  width: 257rpx;
  height: 71rpx;
  position: relative;
  z-index: 2;
  bottom:103rpx;
}
 
.content {
  display:flex;
  justify-content:space-between;
  position:absolute;
  width:69%;
  left:15%;
  height:205rpx;
  top: 30%;
  border-radius:10rpx;
  z-index: 1;
  margin-left: 8rpx;
}
 
 
.content .line {
  width: 149rpx;
  height: 168rpx;
  border-radius: 14rpx;
  overflow: hidden;
  position: relative;
}
 
.content .line image {
  width: 100%;
  height: 100%;
  position: absolute;
  top: -170rpx;
  left: 0px;
}
 
